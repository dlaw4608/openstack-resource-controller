---
apiVersion: openstack.k-orc.cloud/v1alpha1
kind: {{ $kind }}
metadata:
  name: {{ $packageName }}-dependency-no-{{ . | lower }}
status:
  conditions:
    - type: Available
      message: OpenStack resource is available
      status: "True"
      reason: Success
