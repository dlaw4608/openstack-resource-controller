{{ $packageName := .PackageName -}}
---
apiVersion: kuttl.dev/v1beta1
kind: TestAssert
resourceRefs:
    - apiVersion: openstack.k-orc.cloud/v1alpha1
      kind: {{ .Kind }}
      name: {{ $packageName }}-import-dependency
      ref: {{ $packageName }}1
    - apiVersion: openstack.k-orc.cloud/v1alpha1
      kind: {{ .Kind }}
      name: {{ $packageName }}-import-dependency-not-this-one
      ref: {{ $packageName }}2
{{- range .ImportDependencies }}
    - apiVersion: openstack.k-orc.cloud/v1alpha1
      kind: {{ . }}
      name: {{ $packageName }}-import-dependency
      ref: {{ . | camelCase }}
{{- end }}
assertAll:
    - celExpr: "{{ $packageName }}1.status.id != {{ $packageName }}2.status.id"
{{- range .ImportDependencies }}
    - celExpr: "{{ $packageName }}1.status.resource.{{ . | camelCase }}ID == {{ . | camelCase }}.status.id"
{{- end }}
---
apiVersion: openstack.k-orc.cloud/v1alpha1
kind: {{ .Kind }}
metadata:
  name: {{ $packageName }}-import-dependency
status:
  conditions:
    - type: Available
      message: OpenStack resource is available
      status: "True"
      reason: Success
    - type: Progressing
      message: OpenStack resource is up to date
      status: "False"
      reason: Success
